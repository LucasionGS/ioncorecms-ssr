{
  "nodeModulesDir": "auto",
  "type": "module",
  "tasks": {
    "dev": "deno run -A --watch --inspect=0.0.0.0:9229 server.ts",
    "build": "deno task build:client && deno task build:server",
    "build:client": "vite build --outDir dist/client",
    "build:server": "vite build --ssr src/entry-server.tsx --outDir dist/server",
    "preview": "cross-env NODE_ENV=production deno run -A server.ts"
  },
  "imports": {
    "@types/compression": "npm:@types/compression@^1.8.1",
    "axios": "npm:axios@^1.12.2",
    "compression": "npm:compression@^1.8.1",
    "express": "npm:express@^5.1.0",
    "react": "npm:react@^19.1.1",
    "react-dom": "npm:react-dom@^19.1.1",
    "sirv": "npm:sirv@^3.0.2",
    "socket.io-client": "npm:socket.io-client@^4.8.1",
    
    "@std/assert": "jsr:@std/assert@1",
    "@types/express": "npm:@types/express@^5.0.3",
    "@types/express-session": "npm:@types/express-session@^1.18.2",
    "@types/jsonwebtoken": "npm:@types/jsonwebtoken@^9.0.10",
    "@types/multer": "npm:@types/multer@^2.0.0",
    "@types/node": "npm:@types/node@^24.5.2",
    "bcryptjs": "npm:bcryptjs@^3.0.2",
    "cors": "npm:cors@^2.8.5",
    "express-session": "npm:express-session@^1.18.2",
    "jsonwebtoken": "npm:jsonwebtoken@^9.0.2",
    "multer": "npm:multer@^2.0.2",
    "mysql2": "npm:mysql2@^3.15.0",
    "sequelize": "npm:sequelize@^6.37.7",
    "socket.io": "npm:socket.io@^4.8.1",
    "sass-embedded": "npm:sass-embedded@^1.92.1",
    "@types/react": "npm:@types/react@^19.1.13",
    "@types/react-dom": "npm:@types/react-dom@^19.1.9",
    "@vitejs/plugin-react-swc": "npm:@vitejs/plugin-react-swc@^4.0.1",
    "cross-env": "npm:cross-env@^10.0.0",
    "typescript": "npm:typescript@~5.9.2",
    "vite": "npm:vite@^7.1.5",
    "react-router-dom": "npm:react-router-dom@^7.9.1"
  },
  "lint": {
    "rules": {
      "exclude": [
        "no-namespace"
      ]
    }
  },
  "compilerOptions": {
    "lib": [
      "dom"
    ],
    "experimentalDecorators": true
  }
}